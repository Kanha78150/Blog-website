<body>
    <header>
        <a href="" class="logo">BlogAwsome</a>
        <nav>
            <a href="/">
                Home
            </a>
            <a href="">
                Author
            </a>
            <a href="#Blogrender">
                Blog
            </a>
            <a href="/articles/new">Post</a>
        </nav>
    </header>


    <div class="hero">
        <div class="left">
            <h1>Transformative Stories, Shared with Purpose .</h1>
            <p>Discover a collection of transformative stories meticulously crafted and thoughtfully shared with a
                purpose.
                Explore the profound narratives that inspire, enlighten, and resonate with the essence of purposeful
                storytelling....
            </p>
            <a href="/articles/new" class="mar">Create a Blog</a>
            <a href="#Blogrender">See more Blog</a>
        </div>
        <div class="right">
            <img src="/imgaes/Blog post-amico.png" alt="">
        </div>

    </div>

    <div class="blogpage" id="Blogrender">
        <h1>Latest Blogs</h1>
        <div id="initial" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
            <% articles.forEach(article=> { %>
                <div class="col mb-4">
                    <div class="card">
                        <a href="articles/<%= article.slug %>" class="card-link">
                            <div class="line mt-2 mb-2">
                                <div>
                                    <%= article.author %>
                                </div>
                                <div>
                                    <%= article.createdAt.toLocaleDateString() %>
                                </div>
                            </div>
                            <h5 class="card-title" style="margin: 0;">
                                <%= article.title %>
                            </h5>
                            <p class="desc text-muted">
                                <%= article.description %>
                            </p>
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>
        <br>
    </div>


    <div class="lastfooter">
        <footer class="footer--light">
